<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@integer/button_digit_fadein_background_duration"
    android:exitFadeDuration="@integer/button_digit_fadeout_background_duration">

    <item android:state_pressed="true">
        <shape >

            <stroke
                android:color="#E57373"
                android:width="3dp" />

            <solid
                android:color="#EF9A9A" />

            <corners
                android:radius="4dp" />


        </shape>
    </item>

    <item>
        <shape>
            <stroke android:color="@color/grey_200"
                android:width="1dp"
                />
        </shape>
    </item>

</selector>